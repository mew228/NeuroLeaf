# Production Environment Template
# Copy to .env and fill in values

# Environment
ENV=production

# Database (Render PostgreSQL connection string)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/neuroleaf_db

# Security
SECRET_KEY=generate-a-secure-64-character-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# OpenAI API Key (required for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# CORS - Add your frontend domain
ALLOWED_ORIGINS=https://neuroleaf.vercel.app

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Redis (Upstash - optional but recommended)
REDIS_URL=redis://default:password@host.upstash.io:6379

# Sentry (optional - for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Encryption (generate with: python -c "import secrets; print(secrets.token_hex(32))")
ENCRYPTION_MASTER_KEY=your-64-character-hex-key
